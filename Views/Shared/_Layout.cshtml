<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fundraisers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CS451R_Fundraiser.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ===== Begin Header ===== -->
    <header>
        <a id="blogo" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/blastOffRocket.png" height="100px" width="100px" /></a>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Fundraisers" asp-action="Index">Fundraisers</a>
                        </li>
                        <li class="nav-item"> 
                            <a class="nav-link row" asp-area="" asp-controller="Fundraisers" asp-action="Create">Launch a Fundraiser</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- This loads the content based on the page you are on. Remains within overall layout. -->
    <div class="wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ===== Begin Footer ===== -->
    <footer id="footer" class="border-top footer">
        <div class="container">
            <h3>BlastOff</h3>
            <div class="credits"> Design by: Andrew Hemenway | Arya Yazdi | Kyle Helm | Riley Brookins</div>
            <div class="copyright">&copy; Copyright Blast Off Inc. 2023 All Rights Reserved</div>
            <div class="Contact">Contact Us *PLACEHOLDER*</div>
        </div>
    </footer>
    <!-- ===== End Footer ===== -->


    <!-- ===== JS & Bootstrap Files ===== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

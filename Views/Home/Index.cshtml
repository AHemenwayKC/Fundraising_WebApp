@{
    ViewData["Title"] = "BlastOff Home Page";
}

<html>
    <body>
        <!-- ===== Begin hero section  ===== -->
        <section id="hero">
            <div class="container">
                <div class="row row-cols-2">
                    <div class="col">
                        <h1 class="hero-title">Launch Your Fundraiser</h1>
                        <p class="hero-summary">Bring your creative idea and turn it into a reality. BlastOff is a fundraising platform focused on taking your mission and helping it reach where you want it to go.</p>
                    </div>
                    <div class="col">
                        <h2 class="herotitle">How It Works</h2>
                        <ul class="hero-list">
                            <li><i>Create and set your fundraising goals</i></li>
                            <li><i>______</i></li>
                            <li><i>Track your goals and progress</i></li>
                        </ul>
                        <div class="col-lg-8 order-1 order-lg-2">
                            <img src="~/images/homePageImage1.jpg" class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ===== End hero section  ===== -->


        <!-- ===== Begin milestone section  ===== -->
        <section id="milestones" class="milestones">
            <div class="container">
                <div class="section-title"><h2>Our Milestones</h2></div>
                <div class="row no-gutters">
                    <div class="row row-cols-3">
                        <div id="milestone-box" class="col-lg-4 col-md-6">
                            <h4 class="title"><a># of Fundraisers</a></h4>
                            <div id="fundraiser-count" class="milestone-numbers">1000</div>
                        </div>
                        <div id="milestone-box" class="col-lg-4 col-md-6">
                            <h4 class="title"><a>Total # of Donations</a></h4>
                            <div id="donations-count" class="milestone-numbers">1001</div>
                        </div>
                        <div id="milestone-box" class="col-lg-4 col-md-6">
                            <h4 class="title"><a>Total Donations in $</a></h4>
                            <div id="donation-dollars" class="milestone-numbers">1002</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ===== End milestone section  ===== -->


        <!-- ===== Begin featured section  ===== -->
        <section id="featured" class="featured">
            <div class="container">
                <div class="section-title"><h2>Featured Fundraisers</h2></div>

                <div class="card-group">
                    <div class="card" id="feat-card">
                        <img class="card-img-top"></img>
                        <div class="card-body">
                            <h3 class="card-title">Card 1 Title</h3>
                            <div class="card-text">Card 1 content area</div>
                        </div>
                        <div class="card-footer">
                            <button class="btn2 btn-outline"></button>
                        </div>
                    </div>
                    <div class="card" id="feat-card">
                        <img class="card-img-top"></img>
                        <div class="card-body">
                            <h3 class="card-title">Card 2 Title</h3>
                            <div class="card-text">Card 2 content area</div>
                        </div>
                        <div class="card-footer">
                            <button class="btn2 btn-outline"></button>
                        </div>
                    </div>
                    <div class="card" id="feat-card">
                        <img class="card-img-top"></img>
                        <div class="card-body">
                            <h3 class="card-title">Card 3 Title</h3>
                            <div class="card-text">Card 3 content area</div>
                        </div>
                        <div class="card-footer">
                            <button class="btn2 btn-outline"></button>
                        </div>
                    </div>
                <div class="card" id="feat-card">
                    <img class="card-img-top"></img>
                    <div class="card-body">
                        <h3 class="card-title">Card 4 Title</h3>
                        <div class="card-text">Card 4 content area</div>
                    </div>
                    <div class="card-footer">
                        <button class="btn2 btn-outline"></button>
                    </div>
                </div>
                </div>
            </div>
        </section>
        <!-- ===== End featured section  ===== -->
    </body>
</html>
